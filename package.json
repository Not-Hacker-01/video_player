{
  "name": "video-ad-player-sdk",
  "version": "2.4.0",
  "description": "A powerful, customizable video ad player SDK with React components and Web Component support for YouTube, direct URLs, and HLS streams",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./vanilla": "./dist/vanilla.js",
    "./web-component": "./dist/vanilla.iife.js",
    "./styles.css": "./dist/index.css"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "video",
    "ad",
    "player",
    "react",
    "video-player",
    "advertisement",
    "sdk",
    "youtube",
    "hls",
    "customizable",
    "closeable",
    "video-ads"
  ],
  "author": "Govind <govind04542@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/stupaprateek/video-ad-player-sdk.git"
  },
  "bugs": {
    "url": "https://github.com/stupaprateek/video-ad-player-sdk/issues"
  },
  "homepage": "https://github.com/stupaprateek/video-ad-player-sdk#readme",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:lib": "tsc -p tsconfig.lib.json && vite build --mode library",
    "build:vanilla": "vite build --mode vanilla",
    "build:all": "npm run build:lib && npm run build:vanilla",
    "lint": "eslint .",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit -p tsconfig.app.json",
    "prepublishOnly": "npm run typecheck && npm run build:all",
    "publish": "npm run build:lib && npm publish"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "dependencies": {
    "lucide-react": "^0.344.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@supabase/supabase-js": "^2.57.4",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.18",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "globals": "^15.9.0",
    "postcss": "^8.4.35",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.3.0",
    "vite": "^5.4.2",
    "vite-plugin-dts": "^4.3.0"
  }
}
